---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  title: string;
  content: string;
}

const { icon, title, content } = Astro.props;
---

<article class="flex flex-col items-center">
  <Icon name={icon} class="w-12 h-auto text-primary-light" />
  <h3 class="text-xl font-bold mt-4">{title}</h3>
  <p class="text-neutral-300 mt-2 max-w-[50ch] text-balance text-center">
    {content}
  </p>
</article>
