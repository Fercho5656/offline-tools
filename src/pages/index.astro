---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import FeatureCard from "@components/FeatureCard.astro";

const cards = [
	{
		icon: "image",
		title: "Media Compression",
		description:
			"Optimize for web, compress while maintaining quality, convert formats, etc.",
		link: "/media",
	},
	{
		icon: "audio-lines",
		title: "Audio Transcription",
		description:
			"Transcribe audio/video files into text, support multiple languages.",
		link: "/audio",
	},
	{
		icon: "document",
		title: "PDF Tools",
		description: "Merge, split, compress, convert, and optimize PDF files.",
		link: "/pdf",
	},
	{
		icon: "robot",
		title: "LLM Chatbot",
		description: "A chatbot that can answer your questions about LLM.",
		link: "/chatbot",
	},
];

const reasons = [
	{
		icon: "globe-lock",
		title: "Privacy & Security",
		description:
			"No data is sent to the server, everything is processed locally.",
	},
	{
		icon: "cloud-off",
		title: "Offline Availability",
		description:
			"Works even when you're offline, no need for an internet connection.",
	},
	{
		icon: "person-standing",
		title: "Accessibility",
		description:
			"No need to install any external software, just open the website and start using it.",
	},
];
---

<Layout>
	<section class="text-center flex flex-col items-center mt-12">
		<h1 class="text-5xl md:text-6xl font-bold mb-4">
			Your Offline <span
				class="bg-gradient-to-r from-primary to-neutral-100 bg-clip-text text-transparent"
				>Toolkit</span
			>
		</h1>
		<p class="text-xl text-primary-light max-w-[80ch] text-balance mb-4">
			A collection of tools that work entirely offline
		</p>
	</section>
	<section
		class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8 mt-24 auto-rows-fr"
	>
		{
			cards.map((card) => (
				<FeatureCard
					icon={card.icon}
					title={card.title}
					description={card.description}
					link={card.link}
				/>
			))
		}
	</section>
	<section class="mt-24">
		<h2 class="text-3xl font-bold text-center mb-12">Why Go Offline?</h2>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-4">
			{
				reasons.map((reason) => (
					<div class="flex flex-col items-center">
						<Icon name={reason.icon} class="w-12 h-auto text-primary-light" />
						<h3 class="text-xl font-bold mt-4">{reason.title}</h3>
						<p class="text-neutral-300 mt-2 max-w-[50ch] text-balance text-center">
							{reason.description}
						</p>
					</div>
				))
			}
		</div>
		<script>
			if (navigator.serviceWorker) {
				navigator.serviceWorker.register("/service-worker.ts");
			}
		</script>
	</section>
</Layout>
